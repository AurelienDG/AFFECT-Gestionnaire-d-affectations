<Window
    x:Class="SAE_prototype.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_prototype"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  template pour inserer une case a cocher dans un listview : la case est cochee sur la selection d'un item  -->
        <DataTemplate x:Key="caseACocher">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:ApplicationData />
    </Window.DataContext>
    <Grid Background="#FFCDCDCD">
        <TabControl>
            <TabItem Header="Accueil">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115*" />
                        <ColumnDefinition Width="282*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="1"
                        Margin="90,164,0,0"
                        Source="/bleueblancrouge.png"
                        Stretch="Fill" />
                    <Label
                        Grid.ColumnSpan="2"
                        Width="558"
                        Height="56"
                        Margin="118,147,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="&#x9;Bienvenue sur votre application qui vous permettra de gérer vos affectations.&#xA;Pour consulter, modifier ou créer une affectations dirigé vous dans l'onglet &quot;Consulter les Affectations&quot;." />
                    <Label
                        Grid.Column="1"
                        Width="226"
                        Height="76"
                        Margin="54,90,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="ACCUEIL"
                        FontFamily="Britannic Bold"
                        FontSize="48" />
                </Grid>
            </TabItem>
            <TabItem Header="Consulter les Affectations">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="194*" />
                        <ColumnDefinition Width="203*" />
                    </Grid.ColumnDefinitions>
                    <ListView
                        x:Name="lvCorpsArmee"
                        Grid.Column="1"
                        Margin="70,49,70,56"
                        ItemsSource="{Binding listeCorpsArmee}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30" CellTemplate="{StaticResource caseACocher}" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding LibelleCorpsArmee}"
                                    Header="Groupe" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Faire du pain">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="194*" />
                        <ColumnDefinition Width="203*" />
                    </Grid.ColumnDefinitions>
                    <ListView
                        x:Name="lvAffectations"
                        Margin="61,53,61,52"
                        ItemsSource="{Binding listeAffectations}"
                        SelectionChanged="lvAffectations_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30" CellTemplate="{StaticResource caseACocher}" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding CodeDivision}"
                                    Header="Code Division" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding CodeMission}"
                                    Header="Code Mission" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Grid.ColumnSpan="2" DataContext="{Binding SelectedItem, ElementName=lvAffectations}">
                        <TextBox
                            x:Name="textBoxDate"
                            Width="120"
                            Margin="437,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text=""
                            TextWrapping="Wrap" />
                        <Button
                            x:Name="ModifierButton"
                            Width="48"
                            Margin="576,84,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="ModifierButton_Click"
                            Content="Modifier" />
                        <Calendar
                            x:Name="CalendarAffectation"
                            Margin="408,135,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                        <Label
                            x:Name="sexe"
                            Margin="618,165,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Label" />
                        <Button
                            x:Name="BoutonSupprimer"
                            Width="184"
                            Margin="440,59,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Supprimer" Click="BoutonSupprimer_Click" />
                    </Grid>


                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
