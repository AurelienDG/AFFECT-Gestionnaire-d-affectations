<Window
    x:Class="SAE_prototype.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_prototype"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  template pour inserer une case a cocher dans un listview : la case est cochee sur la selection d'un item  -->
        <DataTemplate x:Key="caseACocher">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:ApplicationData />
    </Window.DataContext>
    <Grid Background="#FFCDCDCD">
        <TabControl>
            <TabItem Header="Accueil">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115*" />
                        <ColumnDefinition Width="282*"/>
                    </Grid.ColumnDefinitions>
                    <Image
                        Margin="90,164,0,0"
                        Source="/bleueblancrouge.png"
                        Stretch="Fill" Grid.Column="1" />
                    <Label
                        Width="558"
                        Height="56"
                        Margin="118,147,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="&#x9;Bienvenue sur votre application qui vous permettra de gérer vos affectations.&#xA;Pour consulter, modifier ou créer une affectations dirigé vous dans l'onglet &quot;Consulter les Affectations&quot;." Grid.ColumnSpan="2" />
                    <Label
                        Width="226"
                        Height="76"
                        Margin="54,90,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="ACCUEIL"
                        FontFamily="Britannic Bold"
                        FontSize="48" Grid.Column="1" />
                </Grid>
            </TabItem>
            <TabItem Header="Consulter les Affectations">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="194*" />
                        <ColumnDefinition Width="203*" />
                    </Grid.ColumnDefinitions>
                    <ListView
                        x:Name="lvCorpsArmee"
                        Grid.Column="1"
                        Margin="70,49,70,56"
                        ItemsSource="{Binding listeCorpsArmee}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30" CellTemplate="{StaticResource caseACocher}" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding LibelleCorpsArmee}"
                                    Header="Groupe" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Faire du pain">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="365*"/>
                        <ColumnDefinition Width="406*" />
                    </Grid.ColumnDefinitions>
                    <ListView
                        x:Name="lvMission"
                        Margin="25,42,48,42"
                        ItemsSource="{Binding listeMissions}"
                        SelectionChanged="ListView_SelectionChanged" Grid.Column="1">
                        <ListView.View>

                            <GridView>
                                <GridViewColumn Width="30" CellTemplate="{StaticResource caseACocher}" />
                                <GridViewColumn
                                    Width="100"
                                    DisplayMemberBinding="{Binding LibelleMission}"
                                    Header="Groupe" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid DataContext="{Binding SelectedItem, ElementName=lvMission}" Grid.ColumnSpan="2" />
                    <Button
                        x:Name="Supprimer"
                        Grid.Column="2"
                        Width="170"
                        Margin="133,62,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Supprimer_Click"
                        Content="Supprimer" />
                    <TextBox
                        x:Name="TextBoxCreate"
                        Grid.Column="2"
                        Width="75"
                        Height="20"
                        Margin="5,162,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        GotFocus="NomTextBox_GotFocus"
                        Text="Libelle"
                        TextWrapping="Wrap" />
                    <Button
                        x:Name="AjouterButton"
                        Grid.Column="2"
                        Width="48"
                        Margin="194,363,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="Ajouter_Click"
                        Content="Ajouter" />
                    <TextBox
                        x:Name="ChangeNom"
                        Grid.Column="2"
                        Width="124"
                        Height="20"
                        Margin="133,98,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="Modifier"
                        TextWrapping="Wrap" />
                    <Button
                        x:Name="ModifierButton"
                        Grid.Column="2"
                        Width="50"
                        Margin="268,98,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="ModifierButton_Click"
                        Content="Modifier" />

                    <ComboBox x:Name="ComboBoxCreate"
                        ItemsSource="{Binding listeMissions}"
                        DisplayMemberPath="LibelleCDivision" Margin="94,162,188,224" Grid.Column="2"
                       />
                    <Calendar x:Name="CalendrierCreate" Grid.Column="2" HorizontalAlignment="Left" Margin="223,157,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="CommentaireCreate" HorizontalAlignment="Left" Height="137" Margin="0,203,0,0" Text="Commentaire" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Grid.Column="2"/>


                </Grid>


            </TabItem>
        </TabControl>
    </Grid>
</Window>
